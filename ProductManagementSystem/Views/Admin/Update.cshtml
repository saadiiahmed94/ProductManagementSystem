@model IEnumerable<ProductManagementSystem.Models.Product>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }
    </style>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Content/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>
    <link href="~/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    


</head>
<body >
    Welcome
    <b>@HttpContext.Current.User.Identity.Name</b>
    <form>
        <input type="text" name="SearchTerm" />
        <input type="submit" value="Search" />
    </form>
    <div>
        
        
            
            <table cellpadding="2" cellspacing="2" border="1" align="center">
                <thead>
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody >

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.product_id</td>
                            <td>@item.product_name</td>
                            <td>@item.product_price</td>
                            <td><button class="abc">Edit</button></td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">EDIT</h4>
                </div>
                <form method="post">
                    <div class="modal-body">

                        <p><input type="text" class="input-sm disabled" id="product_id" name="product_id" readonly/></p>
                        <p><input type="text" class="input-sm" id="product_name" name="product_name" /></p>
                        <p><input type="number" class="input-sm" id="product_price" name="product_price" /></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>

                    </div>
                </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

      <script type="text/javascript">
          $('.abc').on('click', function () {
              $("#myModal").modal("show");
              $("#product_id").val($(this).closest('tr').children()[0].textContent);
              $("#product_name").val($(this).closest('tr').children()[1].textContent);
              $("#product_price").val($(this).closest('tr').children()[2].textContent);
          });
    </script>

</body>
</html>
